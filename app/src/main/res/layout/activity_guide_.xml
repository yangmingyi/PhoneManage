<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhuoxin.activity.Guide_Activity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp">

        <ImageView
            android:id="@+id/iv_circle_gray1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:src="@drawable/shape_circle_gray" />

        <ImageView
            android:id="@+id/iv_circle_gray2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_toEndOf="@id/iv_circle_gray1"
            android:src="@drawable/shape_circle_gray" />

        <ImageView
            android:id="@+id/iv_circle_gray3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_circle_gray2"
            android:src="@drawable/shape_circle_gray" />

        <ImageView
            android:id="@+id/iv_circle_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_circle_red" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_ship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:text="Ship"
        android:textSize="20sp"
        android:visibility="invisible" />
</RelativeLayout>
